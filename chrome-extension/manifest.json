{
  "manifest_version": 3,
  "name": "RezzAI Job Automation",
  "version": "1.0.0",
  "description": "Semi-automated job application system for RezzAI",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://linkedin.com/*",
    "https://www.linkedin.com/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://linkedin.com/jobs/*",
        "https://www.linkedin.com/jobs/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost:3000/*"
    ]
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "RezzAI Job Automation"
  }
}
